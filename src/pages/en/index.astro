        <div class="p-6 bg-white/10 rounded-xl shadow text-white hover:shadow-lg transition">
          <div class="text-5xl mb-3">
            <iconify-icon icon="mdi:gamepad-variant-outline" aria-hidden="true"></iconify-icon>
