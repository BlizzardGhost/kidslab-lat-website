---
import BaseLayout from '../../layouts/BaseLayout.astro';
const FORMSPARK_URL = import.meta.env.FORMSPARK_URL;
---

<BaseLayout lang="en">
  <section class="max-w-2xl mx-auto py-20">
    <h2 class="text-3xl font-bold mb-4">Contact Us</h2>
    <form action={FORMSPARK_URL} method="POST" class="space-y-4">
      <input type="text" name="name" placeholder="Your Name" required class="w-full border px-3 py-2 rounded" />
      <input type="email" name="email" placeholder="Your Email" required class="w-full border px-3 py-2 rounded" />
      <textarea name="message" placeholder="Your Message" required class="w-full border px-3 py-2 rounded"></textarea>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Send</button>
    </form>
  </section>
</BaseLayout>