---
import BaseLayout from '../../layouts/BaseLayout.astro';
const lang = 'en';
const title = 'Python Quest — Kidslab';
const description = 'Learn Python by building mini‑games. Small groups, playful learning.';
---
<BaseLayout lang={lang} title={title} description={description}>
  <section class="max-w-6xl mx-auto px-6 py-20 text-center">
    <h1 class="text-4xl md:text-5xl font-display font-bold text-kidslab-naranja">Python Quest</h1>
    <p class="mt-3 text-gray-700">Course page coming soon. Want details now? Tap the WhatsApp button on the home page.</p>
  </section>
</BaseLayout>