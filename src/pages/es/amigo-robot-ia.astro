  <!-- UTIL: tracking + UTM para WhatsApp + micro A/B -->
  <script is:inline>
    // A/B headline (si existieran spans data-ab)
    (function(){
      try {
        var variant = (Math.random() < 0.5) ? 'a' : 'b';
        var a = document.querySelector('[data-ab="headline-a"]');
        var b = document.querySelector('[data-ab="headline-b"]');
        if (variant === 'b' && a && b) { a.classList.add('hidden'); b.classList.remove('hidden'); }
      } catch(e){}
    })();

    // Mantener UTM al abrir links (por si hay deep links fuera del modal)
    function currentUtmQuery() {
      const params = new URLSearchParams(window.location.search);
      const keep = ['utm_source','utm_medium','utm_campaign','utm_content','utm_term'];
      const kept = new URLSearchParams();
      keep.forEach(k => { if (params.get(k)) kept.set(k, params.get(k)); });
      return kept.toString();
    }

    function trackLead(source){
      try { fbq && fbq('track','Lead', {source: source || 'cta'}); } catch(e){}
    }

    ['cta-reserve-top','cta-reserve-bottom','cta-parent-info-top','cta-parent-info-bottom'].forEach(id=>{
      const el = document.getElementById(id);
      if (!el) return;
      el.addEventListener('click', () => {
        const qs = currentUtmQuery();
        if (qs) {
          const href = el.getAttribute('href') || '';
          if (!href.startsWith('#')) {
            el.setAttribute('href', href + (href.includes('?') ? '&' : '?') + qs);
          }
        }
        trackLead(id);
      });
    });

    // Prefill en WhatsApp en español
    document.querySelectorAll('a[href*="wa.me"], a[href*="api.whatsapp.com"]').forEach(link => {
      const msg = encodeURIComponent("Hola, quiero reservar un cupo para 'Mi Primer Amigo Robot' al precio de lanzamiento de $75 USD.");
      try {
        const url = new URL(link.href);
        if (!url.searchParams.has('text')) {
          url.searchParams.set('text', msg);
          link.href = url.toString();
        }
      } catch(e){}
    });

    // Si el formulario de WhatsApp emite submit
    document.addEventListener('submit', (e) => {
      const form = e.target;
      if (form && (form.id === 'whatsapp-lead-form' || form.dataset.role === 'whatsapp-lead')) {
        trackLead('whatsapp_form_submit');
      }
    }, true);
  </script>
