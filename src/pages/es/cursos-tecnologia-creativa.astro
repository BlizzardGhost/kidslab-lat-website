---
// pages/es/cursos.astro
import BaseLayout from '../../layouts/BaseLayout.astro';

const lang = 'es';

const courses = [
  {
    title: 'Amigo Robot con IA',
    blurb: 'Adolescentes (13–17) diseñan un compañero de IA amigable — seguro, acompañado y creativo.',
    href: '/es/ai-robot-friend',
    icon: 'ph:robot',
    color: 'text-kidslab-morado',
  },
  {
    title: 'Misión Python',
    blurb: 'Aprende Python creando mini‑juegos. Lógica, creatividad y mucha diversión.',
    href: '/es/python-quest',
    icon: 'ph:code',
    color: 'text-kidslab-morado',
  },
  {
    title: 'Aventura de Diseño 3D',
    blurb: 'Da vida a tu imaginación en Blender — personajes, props y mini animaciones.',
    href: '/es/3d-design-adventure',
    icon: 'ph:cube-focus',
    color: 'text-kidslab-morado',
  },
  {
    title: 'Ilustración Digital — Descubre tu Estilo',
    blurb: 'Descubre tu voz visual — bases analógicas + herramientas digitales modernas.',
    href: '/es/digital-illustration-style',
    icon: 'ph:paint-brush-broad',
    color: 'text-kidslab-morado',
  },
  {
    title: 'Programación con Minecraft EDU',
    blurb: 'Aprende a resolver problemas construyendo dentro de Minecraft EDU.',
    href: '/es/minecraft-edu-coding',
    icon: 'ph:cube',
    color: 'text-kidslab-morado',
  },
];
---

<BaseLayout lang={lang} title="Cursos | Kidslab" description="Explora nuestros cursos de tecnología creativa para niños y adolescentes: humanos primero, éticos y muy divertidos.">
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-20">
    <h1 class="font-display text-4xl md:text-5xl font-bold text-kidslab-naranja text-center">
      Elige tu camino
    </h1>
    <p class="mt-3 text-center text-gray-700 max-w-2xl mx-auto">
      Humano primero, ético y súper divertido. Empieza donde estás — crece con un mentor.
    </p>

    <div class="mt-10 grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {courses.map((c) => (
        <a href={c.href} class="group bg-white rounded-xl p-6 shadow-md hover:shadow-2xl hover:-translate-y-1 transition block">
          <div class="flex items-start gap-4">
            <iconify-icon icon={c.icon} class={`text-4xl ${c.color} shrink-0 transition-transform group-hover:-translate-y-0.5`} aria-hidden="true"></iconify-icon>
            <div>
              <h3 class="text-lg font-bold text-gray-900">{c.title}</h3>
              <p class="mt-1 text-sm text-gray-600">{c.blurb}</p>
              <span class="mt-3 inline-flex items-center gap-1 text-kidslab-celeste font-semibold">
                Ver detalles
                <iconify-icon icon="ph:arrow-right" class="text-base" aria-hidden="true"></iconify-icon>
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="mt-10 text-center text-sm text-gray-500">
      ¿No ves tu curso soñado? <a href="/es#get-info" class="text-kidslab-naranja font-semibold hover:underline">Cuéntanos qué quieres crear.</a>
    </div>
  </section>
</BaseLayout>