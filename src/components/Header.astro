---
const { lang = 'en' } = Astro.props;

const nav = {
  en: ['Home', 'About', 'Courses'],
  es: ['Inicio', 'Nosotros', 'Cursos']
};

const navItems = nav[lang] ?? [];

import LanguageSwitcher from '../components/LanguageSwitcher.astro'

---

<header class="w-full sticky top-8 z-50">
  <div class="mx-auto max-w-6xl bg-white bg-opacity-75 backdrop-blur-md rounded-full px-6 py-2 flex items-center justify-between border border-gray-200 shadow-md">

    <!-- Logo -->
    <a href={lang === 'es' ? '/es' : '/en'} class="flex items-center">
      <img src="/assets/branding/logo.svg" alt="Kidslab logo" class="h-8 w-auto" />
    </a>

    <!-- Nav Links -->
    <nav class="hidden md:flex items-center space-x-8 text-sm md:text-base">
      {navItems.map(item => (
        <a href="#" class="text-gray-700 hover:text-kidslab-naranja font-medium">{item}</a>
      ))}
    </nav>

    <!-- Right side: phone + lang -->
    <div class="flex items-center space-x-6 text-sm md:text-base">
      
      <!-- Phone -->
      <a href="https://wa.me/50378258472" target="_blank" class="text-gray-700 hover:text-kidslab-naranja font-semibold">
        Need help? <span class="text-kidslab-naranja font-bold">+503 7825 8472</span>
      </a>

      <!-- Language -->
      <LanguageSwitcher lang={lang} />
</header>